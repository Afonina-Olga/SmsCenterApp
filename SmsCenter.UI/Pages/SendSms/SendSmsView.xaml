<UserControl x:Class="SmsCenter.UI.Pages.SendSms.SendSmsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SmsCenter.UI.Pages.SendSms"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="32 24" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   VerticalAlignment="Center"
                   Style="{StaticResource BaseHeaderStyle}"
                   Text="Отправить sms-сообщение" />
        <Rectangle Grid.Row="1" Margin="-5 5 0 0" HorizontalAlignment="Left" Height="5" Width="50"
                   Fill="{StaticResource Primary2Brush}">
        </Rectangle>
    </Grid>
</UserControl>